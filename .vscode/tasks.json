{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "start:dev",
      "type": "shell",
      "command": "npm run start:dev",
      "isBackground": true,
      "problemMatcher": {
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "VITE v",
          "endsPattern": "Local:"
        }
      }
    },
    {
      "label": "stop:dev",
      "type": "shell",
      "command": "pkill",
      "args": ["-f", "npm run start:dev"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      }
    }
  ]
}
